#!/bin/bash
export EDITOR="code --wait"
export KUBE_EDITOR="${EDITOR}"
export GOPATH="${HOME}/go"
export GOBIN="${GOPATH}/bin"
export PATH="${HOME}/.local/bin:${GOBIN}:${PATH}"
TERRAGRUNT_CLI_FLAGS="$(
  jq -nrc '[
    "--terragrunt-include-dir non-prod/global/terraform/**/**",
    "--terragrunt-include-dir non-prod/global/iam/**/**",
    "--terragrunt-include-dir non-prod/global/secret/**/**",
    "--terragrunt-include-dir non-prod/global/network/**/**",
    "--terragrunt-include-dir non-prod/global/data/**/**",
    "--terragrunt-include-dir non-prod/global/compute/**/**",
    "--terragrunt-include-dir non-prod/us-central1/network/**/**",
    "--terragrunt-include-dir non-prod/us-central1/data/**/**",
    "--terragrunt-include-dir non-prod/us-central1/compute/**/**"
  ]'
)"
export TERRAGRUNT_CLI_FLAGS
export TERRAGRUNT_COMMAND="run-all apply"
export TERRAGRUNT_WORKING_DIR="terragrunt/live/gcs"
