#!/bin/bash
function curl_ip_address() {
  curl -sS ifconfig.me
}

function weather() {
    current_ip_address=$(curl_ip_address)
    echo "current ip address: ${current_ip_address}"
    curl -sS "wttr.in/@${current_ip_address}" | lower
}

function to_lowercase() {
    echo "${1}" | tr '[:upper:]' '[:lower:]'
}

function to_uppercase() {
    echo "${1}" | tr '[:lower:]' '[:upper:]'
}
